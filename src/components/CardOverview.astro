---
const { data } = Astro.props;

let classAsString = "";
data.category.forEach((element) => {
  classAsString += element + " ";
});
console.log("classAsString", classAsString);
---

<article class={"card " + classAsString}>
  <img src={data.image} alt="random image" />
  <div class="overlay">
    <h1>{data.name}</h1>
    <p class="price">{data.price} kr.</p>
    <a href={"../singleview/" + data.slug}>LÃ¦s mere..</a>
  </div>
</article>
<style>
  /* CARD STYLING */
  .card {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    background-color: #fafafa;
    height: 370px;
    width: 290px;
    border-radius: 10px;
    text-align: left;
    font-family: "Lato";
    line-height: 1.8;
    border-radius: 10px;
    transition: 0.6s;
    text-decoration: none;
  }

  .card:hover {
    box-shadow: 0 8px 20px 0 rgba(0, 0, 0, 0.3);
    transform: scale(1.05);
    cursor: pointer;
  }

  .card img {
    width: 100%;
    height: 192px;
    border-radius: 10px 10px 0 0;
    zoom: 100%;
    object-fit: cover;
  }

  .price {
    color: #494242;
    font-size: 20px;
    margin-bottom: 20px;
  }

  .overlay {
    margin: 20px;
  }

  .overlay h1 {
    font-size: 20px;
    font-family: "Lato";
    color: #494242;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* CARD BUTTON */
  .card a {
    border: 0;
    padding: 10px;
    color: #494242;
    text-align: left;
    cursor: pointer;
    font-size: 13px;
    text-decoration: none;
    border-radius: 10px;
    background-color: #ffdded;
  }

  .card a:hover {
    background-color: #ffcce6;
    box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.2);
  }

  /* DARK MODE */

  body.dark .card {
    background-color: #615d5d;
  }

  body.dark .card h1,
  body.dark .card .price {
    color: #fff;
  }

  body.dark .card a {
    background-color: #8aaf9d;
    color: #fff;
  }
</style>
